{% extends 'base.html.twig' %}

{% block title %}Showing {{ image_name }}{% endblock %}


{% block stylesheets %}
    <style>
        figure {
            display: grid;
            height: 100%;
        }

        figure img {
            max-width: 100%;
            max-height: calc(100vh - 3em);
            margin: auto;
        }

        figcaption {
            text-align: center;
            margin-top: 1em;
        }
    </style>
{% endblock %}

{% block body %}

    <figure>
        {{ path | glide_image({'sizes': ['100vw']}) }}
        {#<figcaption>Caption goes here</figcaption>#}
    </figure>

{% endblock %}
